<p id="notice"><%= notice %></p>

<h1> <%= t "store.h1" %></h1>

<% cache @products do %>
  <% @products.each do |product| %>
    <% cache product do %>
      <div class="entry">
        <%= image_tag(product.image_url, :size=>"100x100") %>
        <h3><%= product.title %></h3>
        <h3><%= sanitize(product.description) %><h3>
        <div class="price_line">
          <span class="price"><%= number_to_currency(product.price) %></span>
          <%= button_to t('store.add'), line_items_path(product_id: product),
          remote: true %>
        </div>
        </div>

    <% end %>
  <% end %>
<% end %>

